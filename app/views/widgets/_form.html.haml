= form_for @widget, url: dashboard_widget_path do |f|
  - if @widget.errors.any?
    #error_explanation
      %h2= "#{pluralize(@widget.errors.count, "error")} prohibited this widget from being saved:"
      %ul
        - @widget.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :code
    = f.text_area :code, class: 'form-control'
  .form-group
    = f.label :pos_x
    = f.number_field :pos_x, class: 'form-control'
  .form-group
    = f.label :pos_y
    = f.number_field :pos_y, class: 'form-control'
  .form-group
    = f.label :scale_x
    = f.number_field :scale_x, :step => "0.01", class: 'form-control'
  .form-group
    = f.label :scale_y
    = f.number_field :scale_y, :step => "0.01", class: 'form-control'
  .form-group
    = f.label :width
    = f.number_field :width, :step => "0.01", class: 'form-control'
  .form-group
    = f.label :height
    = f.number_field :height, :step => "0.01", class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'

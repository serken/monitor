= form_for @widget do |f|
  - if @widget.errors.any?
    #error_explanation
      %h2= "#{pluralize(@widget.errors.count, "error")} prohibited this widget from being saved:"
      %ul
        - @widget.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :dashboard_id
    = f.number_field :dashboard_id
  .field
    = f.label :code
    = f.text_area :code
  .field
    = f.label :pos_x
    = f.number_field :pos_x
  .field
    = f.label :pos_y
    = f.number_field :pos_y
  .field
    = f.label :width
    = f.number_field :width
  .field
    = f.label :height
    = f.number_field :height
  .actions
    = f.submit 'Save'
